<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <import resource="loggers.xml"/>

    <bean id="client" class="spring.core.beans.Client">
        <constructor-arg name="id" value="${id}"/>
        <constructor-arg name="fullName" value="${name}"/>
        <property name="greeting" value="${greeting}"/>
    </bean>



    <bean id="app" class="spring.core.App">
        <property name="event" ref="event"/>
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
        <constructor-arg>
            <map>
                <entry key="INFO"
                       value-ref="fileEventLogger"/>
                <entry key="ERROR"
                       value-ref="combinedEventLogger"/>
            </map>
        </constructor-arg>

    </bean>

    <bean id="dateFormat"
    class="java.text.DateFormat"
    factory-method="getDateTimeInstance"/>

    <bean id="event" class="spring.core.beans.Event" scope = "prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>
    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>client.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>
</beans>
